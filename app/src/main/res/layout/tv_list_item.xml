<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/tv_list_item_image_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacer_8"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        style="@style/TVListItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_list_item_text_horizontal_margin"
        android:layout_marginRight="@dimen/tv_list_item_text_horizontal_margin"
        android:paddingTop="@dimen/spacer_12"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc"
        style="@style/TVListItemDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_list_item_text_horizontal_margin"
        android:layout_marginRight="@dimen/tv_list_item_text_horizontal_margin"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/rating"
        style="@style/TVListItemRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_list_item_text_horizontal_margin"
        android:layout_marginRight="@dimen/tv_list_item_text_horizontal_margin"
        android:layout_marginTop="@dimen/spacer_4"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/desc" />

    <TextView
        android:id="@+id/price"
        style="@style/TVListItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacer_16"
        android:layout_marginLeft="@dimen/tv_list_item_text_horizontal_margin"
        android:layout_marginStart="@dimen/tv_list_item_text_horizontal_margin"
        android:layout_marginTop="@dimen/spacer_4"
        app:layout_constraintLeft_toRightOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/rating" />

</android.support.constraint.ConstraintLayout>